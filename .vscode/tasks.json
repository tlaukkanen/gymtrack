{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend: dev",
      "type": "process",
      "command": "dotnet",
      "args": [
        "watch",
        "run",
        "--project",
        "src/GymTrack.Api/GymTrack.Api.csproj"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend",
        "env": {
          "ASPNETCORE_ENVIRONMENT": "Development"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "showReuseMessage": true
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "frontend: dev",
      "type": "npm",
      "script": "dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "focus": false,
        "showReuseMessage": true
      },
      "problemMatcher": "$tsc-watch",
      "isBackground": true
    },
    {
      "label": "app: dev",
      "dependsOn": [
        "backend: dev",
        "frontend: dev"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
